<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">

            <div class="card">
                <div class="card-header">
                    <h3>Sign Up</h3>
                </div>
                <div class="card-body">
                    <%= form_tag("/pages/register/index", method: "post") do %>

                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <%= text_field_tag(:user_name, params[:user_name],class: "form-control", placeholder: "username") %>                
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <%= password_field_tag(:user_pass, params[:user_pass],class:"form-control", placeholder:"password") %>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <%= password_field_tag(:user_confirm, params[:user_confirm],class:"form-control", placeholder:"confirm") %>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            </div>
                            <%= text_field_tag(:user_email, params[:user_email],class: "form-control", placeholder: "email") %>
                        </div>
                        <div class="form-group">
                            <%= submit_tag("Register", class: "btn float-right login_btn") %>
                        </div>
                    <% end %>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        <%= link_to("Back To Sign In", controller:"pages/login", action:"index") %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        var registerMessage ="<%= @registerMessage %>"
        if (registerMessage !== "") {
            alert(registerMessage)    
        }
    </script>
</body>