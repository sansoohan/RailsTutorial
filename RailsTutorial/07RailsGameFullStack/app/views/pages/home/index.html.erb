

<body>
    <!-- Page Content -->
    <div class="container waiting-container">
        <div class="row room-and-user-row" id="">
            <div class="container col-9 d-flex flex-wrap">
                <% for room_number in (1..10) do %>
                    <div class="container room-container d-flex flex-wrap">
                        <div class="room-grid room-number">
                            <%= "Room#{room_number}" %>
                        </div>
                        <div class="room-grid">
                            <%= button_to "Make", {action: "index", command: "/make #{room_number}"}, {method: "post", form_class: 'dummy-grid-short', class: 'make-button'} %>
                        </div>
                        <div class="room-grid">
                            <%= button_to "Join", {action: "index", command: "/join #{room_number}"}, {method: "post", form_class: 'dummy-grid-short', class: 'join-button'} %>
                        </div>
                        <% for player_number in (1..6) do %>
                            <% if player_number%2 == 1 %>
                                <div class="room-grid player-odd-number">
                                </div>
                            <% else %>
                                <div class="room-grid player-even-number">
                                </div>
                            <% end %>
                        <% end %>
                    </div>
                <% end %>
            </div>
            <div class="container chat-container col-3">

            </div>
        </div>
        <div class="row chat-row">
            <div class="container user-list-container col-12">

            </div>
        </div>
    </div>
</body>
